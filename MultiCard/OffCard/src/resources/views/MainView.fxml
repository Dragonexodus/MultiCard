<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<BorderPane minHeight="400.0" minWidth="400.0" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.102-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="presentation.controllers.MainController">
    <center>
        <TabPane prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab text="Verbindung">
                    <content>
                        <fx:include fx:id="ConnectionTab" source="ConnectionView.fxml" />
                    </content>
                </Tab>
                <Tab text="Konfiguration">
                    <content>
                        <fx:include fx:id="ConfigurationTab" source="ConfigurationView.fxml" />
                    </content>
                </Tab>
                <Tab text="Identifikation">
                    <content>
                        <fx:include fx:id="IdentificationTab" source="Identification.fxml" />
                    </content>
                </Tab>
                <Tab text="Access-Control">
                    <content>
                        <fx:include fx:id="AccessTab" source="AccessView.fxml" />
                    </content>
                </Tab>
                <Tab text="Bonus Points">
                    <content>
                        <fx:include fx:id="BonusTab" source="Bonus.fxml" />
                    </content>
                </Tab>
                <Tab text="Log">
                    <content>
                        <fx:include fx:id="LogTab" source="LogView.fxml" />
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </center>
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
    </padding>
    <bottom>
        <HBox style="-fx-background-color: rgba(255,255,255,0.75); -fx-padding: 7; -fx-background-radius: 3; -fx-effect: innershadow(three-pass-box, rgba(0,0,0,0.75),1,0,1,1);">
         <Pane prefWidth="240.0">
            <children>
               <HBox>
                  <children>
                     <Separator orientation="VERTICAL" />
                        <Label text="Verbindung: ">
                        <font>
                           <Font name="System Bold" size="13.0" />
                        </font></Label>
                        <Label fx:id="lblStatusConnection" text="connection" />
                  </children>
               </HBox>
            </children>
         </Pane>
         <Pane>
            <children>
               <HBox>
                  <children>
                     <Separator orientation="VERTICAL" />
                     <Label text="letzter Status: ">
                        <font>
                           <Font name="System Bold" size="13.0" />
                        </font></Label>
                     <Label fx:id="lblStatusStatus" text="status" />
                  </children>
               </HBox>
            </children>
         </Pane>
        </HBox>
    </bottom>
</BorderPane>
